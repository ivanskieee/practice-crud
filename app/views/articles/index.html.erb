<div style="max-width: 800px; margin: 0 auto; padding: 20px; text-align: center; font-family: Arial, sans-serif;">

  <h1 style="font-size: 36px; color: #333; margin-bottom: 20px;">Articles</h1>

  <ul style="list-style: none; padding: 0; margin-bottom: 40px;">
    <% @articles.each do |article| %>
      <li style="margin-bottom: 15px;">
        <%= link_to article.title, article, style: "font-size: 22px; color: #007bff; text-decoration: none;" %>
      </li>
    <% end %>
  </ul>

  <div style="margin-top: 30px;">
    <%= link_to "New Article", new_article_path, class: "btn btn-success" %>
  </div>
  
</div>
