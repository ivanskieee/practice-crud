<div style="text-align: center; font-family: 'Arial', sans-serif; margin: 0 auto; max-width: 700px;">
  <h1 style="font-size: 2.5rem; margin-bottom: 1.5rem; color: #333;"><%= @article.title %></h1>

  <p style="font-size: 1.2rem; color: #555; margin-bottom: 2rem;"><%= @article.body %></p>

  <ul style="list-style: none; padding: 0; margin-bottom: 2rem;">
    <li style="display: inline-block; margin-right: 1rem;">
      <%= link_to "Edit", edit_article_path(@article), style: "color: #007bff; font-weight: bold; text-decoration: none;" %>
    </li>
    <li style="display: inline-block;">
      <%= link_to "Destroy", article_path(@article), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          }, style: "color: #dc3545; font-weight: bold; text-decoration: none;" %>
    </li>
  </ul>

  <h2 style="font-size: 2rem; color: #333; margin-bottom: 1.5rem;">Comments</h2>
  <% @article.comments.each do |comment| %>
    <div style="background-color: #f8f9fa; padding: 1rem; border-radius: 8px; margin-bottom: 1rem;">
      <p>
        <strong style="color: #007bff;">Commenter:</strong>
        <%= comment.commenter %>
      </p>
      <p>
        <strong style="color: #333;">Comment:</strong>
        <%= comment.body %>
      </p>
    </div>
  <% end %>

  <h2 style="font-size: 2rem; color: #333; margin-top: 2rem;">Add a comment:</h2>
  <%= form_with model: [ @article, @article.comments.build ], style: "max-width: 500px; margin: 0 auto;" do |form| %>
    <p>
      <%= form.label :commenter, style: "font-weight: bold; color: #333;" %><br>
      <%= form.text_field :commenter, style: "width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;" %>
    </p>
    <p>
      <%= form.label :body, style: "font-weight: bold; color: #333;" %><br>
      <%= form.text_area :body, style: "width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;" %>
    </p>
    <p>
      <%= form.submit 'Submit', style: "background-color: #007bff; color: white; padding: 0.5rem 1rem; border: none; border-radius: 4px; cursor: pointer;" %>
    </p>
  <% end %>
</div>
