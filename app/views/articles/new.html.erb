<div style="text-align: center; font-family: 'Arial', sans-serif; margin: 0 auto; max-width: 700px;">
  <h1 style="font-size: 2.5rem; margin-bottom: 2rem; color: #333;">New Article</h1>

  <%= form_with model: @article, style: "max-width: 500px; margin: 0 auto;" do |form| %>
    <div style="margin-bottom: 1.5rem;">
      <%= form.label :title, style: "font-weight: bold; color: #333;" %><br>
      <%= form.text_field :title, style: "width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;" %>
      <% @article.errors.full_messages_for(:title).each do |message| %>
        <div style="color: #dc3545; font-size: 0.9rem; margin-top: 0.5rem;"><%= message %></div>
      <% end %>
    </div>

    <div style="margin-bottom: 1.5rem;">
      <%= form.label :body, style: "font-weight: bold; color: #333;" %><br>
      <%= form.text_area :body, style: "width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;" %>
      <% @article.errors.full_messages_for(:body).each do |message| %>
        <div style="color: #dc3545; font-size: 0.9rem; margin-top: 0.5rem;"><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.submit 'Submit', style: "background-color: #007bff; color: white; padding: 0.5rem 1rem; border: none; border-radius: 4px; cursor: pointer;" %>
    </div>
  <% end %>
</div>
